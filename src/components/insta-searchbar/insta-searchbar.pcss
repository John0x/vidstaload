:host {
  .search-input {
    height: 100%;
    width: 100%;
    padding: 0;
    border: 0;
    flex-grow: 2;
    text-align: center;
    min-width: 0px;

    color: white;
    font-family: 'Roboto';
    font-size: 16px;

    box-shadow: 0 1px 81px rgba(0, 0, 0, 0.53);
    background-color: rgba(255, 255, 255, 0.30);
    border: 2px solid #ffffff;
    border-radius: 2px;
  }

  .search-input:focus {
    outline: none;
  }

  .search-input::placeholder {
    color: #d6d6d6;
  }
}
