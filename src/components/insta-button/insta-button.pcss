:host {
  button {
    margin: 0;
    height: 100%;
    width: 100%;

    color: white;
    font-family: 'Roboto';
    font-size: 16px;

    box-shadow: 0 1px 81px rgba(0, 0, 0, 0.53);

    background-color: rgba(246,142,41, 0.66);
    border: 2px solid #ef851e;
    border-radius: 2px;
  }

  button:focus {
    outline: none;
  }
}
